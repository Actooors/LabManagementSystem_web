article.article{
  table {
    margin: 20px 0;
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    border: 2px solid #eee;
    font-size: 14px;
    table-layout: fixed;
    word-wrap: break-all;
  }
  table>tbody>tr {
    &:nth-of-type(odd) { background-color: #f6f6f6; }
    &:hover { background-color: #eee; }
  }

  caption, th, td {
    padding: 8px;
    text-align: left;
    vertical-align: middle;
    font-weight: normal;
  }

  th, td {
    border-bottom: 3px solid #ccc;
    border-right: 1px solid #ddd;
  }

  th {
    padding-bottom: 10px;
    font-weight: 700;
  }

  td { border-bottom-width: 1px; }

}
